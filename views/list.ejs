<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
    <title>WeatherHub</title>
</head>
<body>
<div id="root">
    <div class="display">
        <p>Weather.Hub</p>
        <div id="weather-data">
            <h1 id="temp"><span><%= temp %>Â°</span></h1>
            <div class="location-info">
                <p class="city"><span><%= city %></span></p>
                <p class="date"><span><%= hours %> : <%= minutes %> - <%= day %>, <%= date %> <%= month %> '<%= year %></span></p>
            </div>
            <!--This div is used for displaying some weather icons from the OpenWeatherMap-->
<!--            <div class="status">-->
<!--                &lt;!&ndash; Some Icon&ndash;&gt;-->
<!--                <p>Sunny</p>-->
<!--            </div>-->
        </div>
    </div>

    <div class="search">
        <form action="/" method="post">
            <input name="cityIn" type="text" placeholder="Search" required>
            <input type="submit" placeholder="search">
        </form>
        <hr>
        <ul>
            <li>Birmingham</li>
            <li>Manchester</li>
            <li>New York</li>
            <li>California</li>
        </ul>
        <hr>
        <p>Weather Details</p>
        <ul>
            <li>Description</li>
            <li>Humidity</li>
            <li>Wind</li>
            <li>Visibility</li>
            <li>Cloudiness</li>
        </ul>
        <ul class="side">
            <li><%= description %></li>
            <li><%= humidity %> %</li>
            <li><%= wind %> m/s</li>
            <li><%= visibility %> km</li>
            <li><%= cloudiness %> %</li>
        </ul>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="server.js"></script>
<script src="index.js"></script>
</body>
</html>